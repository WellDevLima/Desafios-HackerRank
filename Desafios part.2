// Breaking Records

    function breakingRecords(scores) {
        let maior = scores[0];
        let menor = scores [0];
        let auxMaior = 0;
        let auxMenor = 0;
        
        for(let i = 0; i < scores.length; i++){
            if(maior < scores[i]){
                maior = scores[i];
                auxMaior++;
            }
            if(scores[i]< menor){
                menor = scores[i];
                auxMenor++;
            }
        }return [auxMaior, auxMenor]
    
    }

